<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnReadByteArray"
        android:text="Read ByteArray"
        style="@style/Button"/>

    <Button
        android:id="@+id/btnReadListString"
        android:text="Read ListString"
        style="@style/Button"/>

    <Button
        android:id="@+id/btnLoadBitmap"
        android:text="Load Bitmap"
        style="@style/Button"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvAssets"
            android:scrollbars="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ivAssets"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>